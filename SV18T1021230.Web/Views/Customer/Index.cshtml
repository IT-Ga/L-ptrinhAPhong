@model SV18T1021230.Web.Models.CustomerPaginationResult
@{
    ViewBag.Title = "Khách hàng";
}
<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form action="~/customer" method="get">
            <div class="input-group">
                <input type="text" name="searchvalue"
                       class="form-control"
                       placeholder="Nhập tên hoặc địa chỉ cần tìm"
                       autofocus value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit"
                            id="search-btn"
                            class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/customer/create"
                       class="btn btn-flat btn-primary"
                       style="margin-left:10px">
                        <i class="fa fa-plus"></i>
                        Bổ sung
                    </a>
                </span>

            </div>
        </form>
        <p style="margin-top:auto">
            Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang.
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên khách hàng</th>
                        <th>Tên giao dịch</th>
                        <th>Địa chỉ</th>
                        <th>Quốc gia</th>
                        <th>Thành phố</th>
                        <th>Mã bưu chính</th>
                        <th style="width:120px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Address</td>
                            <td>@item.Country</td>
                            <td>@item.City</td>
                            <td>@item.PostalCode</td>
                            <td class="text-right">
                                <a href="~/customer/edit/@item.CustomerID"
                                   class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>Sửa
                                </a>
                                <a href="~/customer/delete/@item.CustomerID"
                                   class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="~/customer?page=@i&searchValue=@Model.SearchValue">@Model.Page</a></li>
                }
                else
                {
                    <li><a href="~/customer?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
            }


        </ul>
    </div>
    <!-- /.box-footer-->
</div>





